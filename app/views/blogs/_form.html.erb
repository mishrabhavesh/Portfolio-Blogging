<div class="card bg-light text-dark text-left card-form">
  <div class="card-body">
    <%= form_with(model: blog, local: true) do |form| %>  
     <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
        <% blog.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <form>
    <div>
      <%= form.label :title %>
      <%= form.text_field :title, autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div  class="mt-3">
        <%= form.label :body %>
        <%= form.text_area :body, cols: "10", rows: "15", class: "form-control form-control-lg"%>
      </div>
    <div class="actions text-right mt-3">
               <%= form.submit  class: "btn rounded-pill btn-success  btn-block w-25 mx-auto " %>
    </div>
    </form>
    <%end%>
  </div>
</div>