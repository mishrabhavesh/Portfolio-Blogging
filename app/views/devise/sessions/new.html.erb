<div class="card bg-light text-dark text-left card-form">
  <div class="card-body">
    <h3 class="card-header text-light text-center w-25  bg-dark rounded mx-auto" >Login</h3>
    <hr>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <form>
    <div>
      <div >
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "email" %>
      </div>
      <div  class="mt-3">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password" , class: "form-control form-control-lg", placeholder: "password"%>
      </div>
    <div class="actions text-right mt-3">
               <%= f.submit "Login up", class: "btn rounded-pill btn-success  btn-block w-25 mx-auto btn-outline-dark" %>
    </div>
    </form>
    <%end%>
     <%= render "devise/shared/links" %>
  </div>
</div> 
</div>