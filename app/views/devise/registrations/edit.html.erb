<div class="container card">
  <div class="row  bg-info">
    <div class="col-md-7">
      <div class=" text-center card-form">
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <h2 class="card-header">Edit <%= resource_name.to_s.humanize %></h2>
          <hr>
          <form>
            <div class="form-group">
              <label class="h4">Email</label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "email" %>
            </div>

            <div class="form-group mt-5">
              <label class="h4">Name</label>
              <%= f.text_field  :name ,class: "form-control form-control-lg"%>
            </div>

            <div class="form-group mt-5">
              <label class="h4">Change passoword</label>
              <%= f.password_field :password, autocomplete: "new-password" , class: "form-control form-control-lg", placeholder: "new password"%>
                <% if @minimum_password_length %>
              <br />
              <% end %>
            </div>
            <div class="form-group mt-5">
                <label class="h4">Confirm password</label>
                <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control form-control-lg", placeholder: "confirm new password" %>
            </div>
            <div class="form-group mt-5 mb-3">
                <label class="h4">Current password to save changes</label>
                <%= f.password_field :current_password, autocomplete: "current-password",class: "form-control form-control-lg", placeholder: "current password " %>
            </div>
            <%= f.submit "Update", class: "btn btn-dark btn-block btn-outline-light" %>
          </form>
          <%end%>
        </div>
      </div>
    </div>    
    <div class="col-md-5 my-auto ">
        <div class="card-body">
            <form>
              <div class="form-group">
                <h5 class="card-header ">Cancel my account</h5>
                  <p class="h4 my-3 ">Unhappy?</p> <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
              </div>
          </form>    
      </div>
    </div>
  </div>
</div>
<div class="py-4 mt-2"><%= link_to "Back", :back, class: "btn btn-primary btn-lg" %></div>
